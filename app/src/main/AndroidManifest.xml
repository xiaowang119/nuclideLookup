<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xiaowang.unclidelookup">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateHidden">
        </activity>
        <activity
            android:name=".ThemeActivity"
            android:label="@string/search"
            android:windowSoftInputMode="adjustPan|stateHidden">
        </activity>
        <activity android:name=".ElementDetail"
            android:label="@string/app_name" >
        </activity>
        <activity android:name=".TableOfElements"
            android:label="@string/app_name" >
        </activity>
        <activity android:name=".Explore"
            android:label="知识库" >
        </activity>
        <activity android:name=".UserDetail"
            android:label="个人信息"
            android:windowSoftInputMode="adjustResize|stateHidden">
        </activity>
        <activity android:name=".About_we"
            android:label="成都久源">
        </activity>
        <activity android:name=".DecaysDetail"></activity>
        <activity android:name=".More"></activity>
        <activity android:name=".Register"
            android:windowSoftInputMode="adjustResize|stateHidden">
        </activity>
        <activity android:name=".Recover"
            android:label="找回密码"
            android:windowSoftInputMode="adjustResize|stateHidden">
        </activity>
        <activity android:name=".Manage"></activity>
        <activity android:name=".Tools"></activity>

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@anim/fade_in" />
    </application>

</manifest>